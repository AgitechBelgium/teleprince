<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_company_view_form_inherit_sale_inventory_api" model="ir.ui.view">
        <field name="name">res.company.view.form.inherit.inventory.api</field>
        <field name="model">res.company</field>
        <field name="inherit_id" ref="base.view_company_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page name="b_an_o_api_config" string="B &amp; O API">
                    <group>
                        <group>
                            <field name="b_and_o_api_environment" class="o_light_label" widget="radio"
                                       options="{'horizontal': true}"/>
                        </group>
                        <group>
                            <field name="b_and_o_api_key"/>
                            <field name="b_and_o_store_id"/>
                        </group>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>